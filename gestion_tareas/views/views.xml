<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- ==========================
             Vista de lista (List)
        =========================== -->
        <record id="gestion_tareas_list" model="ir.ui.view">
            <field name="name">gestion.tareas list</field>
            <field name="model">gestion.tarea</field>
            <field name="arch" type="xml">
                <list string="Lista de Tareas">
                    <field name="name"/>
                    <field name="priority"/>
                    <field name="urgente"/>
                    <field name="realizada"/>
                </list>
            </field>
        </record>

        <!-- ==========================
             Acción para abrir la vista
        =========================== -->
        <record id="gestion_tareas_action_window" model="ir.actions.act_window">
            <field name="name">Listado de Tareas</field>
            <field name="res_model">gestion.tarea</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- ==========================
             Menú principal y submenús
        =========================== -->
        <menuitem name="Gestión de Tareas" id="gestion_tareas_menu_root"/>
        <menuitem name="Opciones de Tareas" id="gestion_tareas_menu_1" parent="gestion_tareas_menu_root"/>
        <menuitem name="Mostrar lista" id="gestion_tareas_menu_1_list"
                  parent="gestion_tareas_menu_1"
                  action="gestion_tareas_action_window"/>

    </data>
</odoo>
